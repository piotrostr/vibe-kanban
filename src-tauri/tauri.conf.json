{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Vibe",
	"version": "0.0.143",
	"identifier": "com.vibekanban.desktop",
	"build": {
		"beforeBuildCommand": "cd ../frontend && pnpm run build",
		"beforeDevCommand": "",
		"devUrl": "http://localhost:6769",
		"frontendDist": "../frontend/dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"withGlobalTauri": false,
		"windows": [
			{
				"title": "",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"visible": false,
				"decorations": true,
				"transparent": false,
				"fullscreen": false,
				"resizable": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["app", "dmg"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns"
		],
		"macOS": {
			"minimumSystemVersion": "10.15",
			"entitlements": null,
			"exceptionDomain": "localhost"
		}
	},
	"plugins": {}
}
